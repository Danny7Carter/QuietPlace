@model IEnumerable<ThinWalls.Models.Review>

@{
    ViewBag.Title = "My Reviews";
}

<h2>My Reviews</h2>


<table class="table table-bordered">
    <tr>
        
        <th>
            Business Name
        </th>
        <th>
            Wall Score 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            <!--Logic to display businesses based on this Yelp ID-->
            @Html.DisplayFor(modelItem => item.YelpID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WallScore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ReviewID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ReviewID })

        </td>
    </tr>
}

</table>

<p>
    Want to write another review? Serach businesses <a href="/Home/Search">here</a>
</p>
