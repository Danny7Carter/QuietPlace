@model ThinWalls.Models.Review

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Your Review?</h2>
<br />
<h4>The Thin Walls community values your opinion.<br />
    <em>Are you sure you want to delete this review?</em></h4>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
           Business Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BusinessName)
        </dd>

        <dt>
            Wall Score
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WallScore)
        </dd>

        <dt>
            Your comments
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to My Reviews", "Index")
        </div>
    }
</div>
